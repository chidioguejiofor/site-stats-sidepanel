{
  "manifest_version": 3,
  "name": "Site Stats",
  "version": "1.0",
  "description": "A Chrome Extension that shows current website stats",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
